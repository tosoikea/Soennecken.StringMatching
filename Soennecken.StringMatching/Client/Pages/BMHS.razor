@page "/string/matching/bmhs"

@using Soennecken.StringMatching.Shared.Algorithms

<h1>Boyer-Moore-Horspool-Sunday</h1>

<MatCard Style="margin:10px">
    <MatCardContent>
        <div class="row">
            <div class="col">
                <object align="middle" style="width:100%;height:100%" data="res/bmhs.svg" type="image/svg+xml"></object>
            </div>
            <div class="col">
                <h3>Beschreibung</h3>
                Der Boyer-Moore-Horspool-Sunday-Algorithmus ist eine kleine Variation des <a href="string/matching/bmh">Boyer-Moore-Horspool-Algorithmus</a>.
                Er verwendet das Zeichen <var>w<sub>i+m</sub></var> statt <var>w<sub>i+m-1</sub></var> zur Auswertung der <b>Bad Character Rule</b>.
                Der maximal mögliche Shift beläuft sich auf <b><var>m+1</var></b>, falls das Zeichen <var>w<sub>i+m</sub></var> nicht im Muster vorkommt.
            </div>
        </div>
    </MatCardContent>
</MatCard>

<MatchingInput Matcher="new BoyerMooreHorspoolSundayMatcher<char>()" />

